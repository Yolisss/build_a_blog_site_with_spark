{{#partial "content"}}
    <section>
        <div class="container">
            <div class="edit-entry">
                <h2>Edit Entry</h2>
                <form action="/edit/{{edit.slug}}" method="post">
                    <label for="title"> Title</label>
                    <input type="text" name="title" id="title" value="{{edit.title}}"><br>
                    <label for="entry">Entry</label>
                    <textarea rows="5" name="entry" id="entry">{{edit.entry}}</textarea>
                    <input type="submit" value="Save Entry" class="button">
                    <a href="#" class="button button-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs }}

