{{#partial "content"}}
    <section>
        <div class="container">
            <div class="entry-list single">
                <article>
                    <h1>{{ detail.title }}</h1>
                    <time datetime="2016-01-31 1:00">{{ date }}</time>
                    <div class="entry">
                        {{ detail.entry }}
                        <p><a class="link" href="/edit/{{detail.slug}}">Edit Entry</a></p>
                    </div>
                </article>
            </div>
        </div>
    </section>
    <section class="entry-comments">
        <div class="container">
            <h2>Comments</h2>
            {{#each detail.comments}}
                <div class="comment">
                    <strong>{{ this.author }}</strong>
                    <time datetime="{{this.date}}">{{ this.date }}</time>
                    {{ this.content }}
                </div>
            {{/each}}
            <div class="new-comment">
                <form action="/detail/{{detail.slug}}" method="post">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name"><br>
                    <label for="comment">Comment</label>
                    <textarea rows="5" name="comment" id="comment"></textarea>
                    <input type="submit" value="Post Comment" class="button">
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs }}